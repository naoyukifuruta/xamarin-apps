<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleTimecard.Views.TodayPage"
             Visual="Material"
             Title="{Binding Title}">

    <StackLayout>
        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Margin="0,32,0,0">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <StackLayout Orientation="Horizontal" Margin="0,32,0,0">
                    <Label Text="{Binding StartTimeLabelText}" TextColor="Black" FontSize="Large"/>
                    <Label Text="{Binding StampingStartTimeLabelText}" TextColor="Black" FontSize="Large" Margin="16,0,0,0"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Margin="0,0,0,0">
                    <Label Text="{Binding EndTimeLabelText}" TextColor="Black" FontSize="Large"/>
                    <Label Text="{Binding StampingEndTimeLabelText}" TextColor="Black" FontSize="Large" Margin="16,0,0,0"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,48,0,0" HorizontalOptions="Center">
                <Button Text="{Binding StartTimeRegistButtonText}" Command="{Binding StartTimeRegistButtonCommand}"
                        HorizontalOptions="StartAndExpand" FontSize="Large" BackgroundColor="LightGray" TextColor="Black"/>
                <Button Text="{Binding EndTimeRegistButtonText}" Command="{Binding EndTimeRegistButtonCommand}"
                        HorizontalOptions="EndAndExpand" FontSize="Large" BackgroundColor="LightGray" TextColor="Black"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
