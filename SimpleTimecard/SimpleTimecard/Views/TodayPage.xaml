<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleTimecard.Views.TodayPage"
             Visual="Material"
             Title="{Binding Title}">

    <StackLayout>
        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Margin="0,32,0,0">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" WidthRequest="160">
                <StackLayout Orientation="Horizontal" Margin="0,32,0,0">
                    <Label Text="{Binding StartTimeLabelText}" TextColor="Black" FontSize="Medium"/>
                    <Label Text="{Binding StampingStartTimeLabelText}" TextColor="Black" FontSize="Medium"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding EndTimeLabelText}" TextColor="Black" FontSize="Medium"/>
                    <Label Text="{Binding StampingEndTimeLabelText}" TextColor="Black" FontSize="Medium"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,48,0,0" HorizontalOptions="Center">
                <Button Text="{Binding StartTimeRegistButtonText}" Command="{Binding StartTimeRegistButtonCommand}" HorizontalOptions="StartAndExpand"
                        FontSize="Default" TextColor="Black" BackgroundColor="WhiteSmoke" BorderColor="LightGray" BorderWidth="1"
                        WidthRequest="120" HeightRequest="40"/>
                <Button Text="{Binding EndTimeRegistButtonText}" Command="{Binding EndTimeRegistButtonCommand}" HorizontalOptions="EndAndExpand"
                        FontSize="Default" TextColor="Black" BackgroundColor="WhiteSmoke" BorderColor="LightGray" BorderWidth="1"
                        WidthRequest="120" HeightRequest="40"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
