<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SimpleTimecard.Views.SettingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sv="clr-namespace:AiForms.Renderers;assembly=SettingsView"
    xmlns:resources="clr-namespace:SimpleTimecard.Resources;assembly=SimpleTimecard"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
    Visual="Material"
    Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="{x:Static resources:AppResources.ButtonClose}"
            Command="{Binding Path=OnClickClose}"/>
    </ContentPage.ToolbarItems>

    <sv:SettingsView HasUnevenRows="true">
        <sv:Section
            Title="データベース"
            FooterText="とりあえず設けているので特にやれることはなし">
            <sv:ButtonCell
                Title="データベース初期化"
                TitleAlignment="Center"
                TitleColor="#CC9900"
                Command="{Binding Path=OnClickInitializedDatabase}"/>
        </sv:Section>
    </sv:SettingsView>

</ContentPage>
